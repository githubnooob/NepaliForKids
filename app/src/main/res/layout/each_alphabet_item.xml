<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            app:cardBackgroundColor="#9C27B0"
            android:id="@+id/StartingElement"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="A"
                android:id="@+id/StartingElementText"
                android:textColor="#FFFFFF"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textSize="60sp"
                android:maxLines="1"
                android:textAlignment="center"
                android:gravity="center"

                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardBackgroundColor="#F44336"
            android:id="@+id/MiddleElement"
            android:layout_weight="0.5"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="B"
                android:textColor="#FFFFFF"
                android:layout_margin="20dp"
                android:id="@+id/MiddleElementText"
                android:textSize="60sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#2196F3"
            android:id="@+id/EndElement"
            android:layout_weight="0.5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="C"
                android:textColor="#FFFFFF"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:textSize="60sp"
                android:id="@+id/EndingElementText"
                android:textAlignment="center"
                android:gravity="center"
                />

        </android.support.v7.widget.CardView>

    </LinearLayout>


</LinearLayout>